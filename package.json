{
  "name": "rajeev-sdk",
  "version": "0.1.0",
  "private": true,
  "description": "Cross-platform infrastructure libraries by Rajeev Kumar Joshi",
  "homepage": "https://rajeev02.github.io",
  "author": "Rajeev Kumar Joshi <rajeevjoshi91@gmail.com> (https://rajeev02.github.io)",
  "license": "MIT",
  "workspaces": [
    "packages/vault/ts-wrapper",
    "packages/network/ts-wrapper",
    "packages/sync/ts-wrapper",
    "packages/locale/ts-wrapper",
    "packages/notify",
    "packages/ui",
    "packages/app-shell",
    "packages/auth",
    "packages/camera",
    "packages/deeplink",
    "packages/document",
    "packages/edge-ai",
    "packages/media",
    "packages/payments",
    "packages/video-editor",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build:ts",
    "build:ts": "node tools/build-all-ts.js",
    "build:rust": "bash tools/rust-build/build-all.sh",
    "build:vault:android": "bash tools/rust-build/build-android.sh vault",
    "build:vault:ios": "bash tools/rust-build/build-ios.sh vault",
    "build:vault:wasm": "bash tools/rust-build/build-wasm.sh vault",
    "test:rust": "cargo test --workspace",
    "test:ts": "yarn workspaces foreach run test",
    "clean": "cargo clean && yarn workspaces foreach run clean",
    "publish:all": "node tools/publish-all.js"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
